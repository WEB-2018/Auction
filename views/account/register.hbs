<body style="overflow:hidden;">
    <div id="register" class="row">
            <form name="registration" id="registration" action="#" method="POST">
               
                <div class="form-group has-feedback">
                    
                
                    <input class="form-control" type="text" placeholder="Full Name" name="name">
              
                
                </div> 
                 <div class="form-group">
                    <input class="form-control" type="text" placeholder="Email" name="email" id="email">
                </div>

                <div class="form-group">
                     <input class="form-control" type="text" placeholder="Address" name="address" id="address">
                </div>
               
                <div class="form-group">
                    <input class="form-control" type="password" placeholder="Password" name = "password" id = "password">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="passwordConfirm" id="passwordConfirm" placeholder="Confirm Password">
                </div>
                <div class="checkbox">
                    
                        <label> 
                            <small>
                                <input type="checkbox" name="agree" id="agree">I have read and agree to the <a href="#">Privacy Policy</a>
                            </small>
                        </label>
                </div>
                <div class="form-group text-center" style="text-align: center">
                  <p  style="color:yellow;float:center">{{errorMsg}}</p>
                </div>
            
                <div>
                        <a href="">
                            <button class="button btn-primary btn-block text-center"  >
                                Sign Up
                            </button>
                        </a>
    
                </div>
                <div>    
            </form>       

    </div>
</body>