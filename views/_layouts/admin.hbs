function deleteProduct(id) {
    var productData = {
        id: id
    };

    $.ajax({
        type: "POST",
        url: "/admin/product/delete",
        data: productData,
        success: function (data) {
            if(data=="success"){
                alert("Deleted");
                $('#'+id+'.productInfo').remove();
            }else {
                alert("Error!Try again!");
            }
        }
    });
}
