
<div class="container" style="width: 90%">
    <div class="header" style="margin-left:0px">
        <h2 class="uppercase">Ship to
        </h2>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <form id="deliver-infor">
                <div class="row">

                    <div class="form-group">
                        <label>Full Name</label>
                        <input class="form-control has-feedback" id="name" name="name" value="{{infor.hoTen}}" placeholder="Full name" >
                    </div>
                    <div class="form-group">
                        <label>Phone Number</label>
                        <input  class="form-control has-feedback"  id="numberPhone" name="numberPhone" type="number" placeholder="Enter your number phone" data-meta="Field" value="{{infor.sdt}}" inputmode="numeric" pattern="[0-9]*">
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input class="form-control has-feedback" id="address" name="address" value="{{infor.diaChi}}" placeholder="Enter your address">
                    </div>

                    <button id="btnFinish" class="btn btn-primary pull-right" type="submit" onclick="finishPayment()">Finish</button>
                </div>
            </form>
        </div>
        <div class="col-lg-4 col-lg-offset-2">
            <div class="header" style="margin-left:0px">
                <h2 class="uppercase">Order Details
                </h2>
                <table id="cart" class="table">
                    <thead >
                    <tr >
                        <th style="width:35%;text-align:center">Product</th>
                        <th style="width:10%;text-align:center">Price</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each cart}}
                        <tr id="cart_{{idSanPham}}">
                            <td data-th="Product" style=" vertical-align: middle; ">
                                <strong>{{soLuong}} x</strong> <a href="/product/detail/{{idSanPham}}"  class="text text-primary">{{tenSanPham}} </a>
                            </td>
                            <td data-th="Price" style=" vertical-align: middle;text-align:right " ><input id="price_{{idSanPham}}" value="{{tong}}" style="border:none;width:50px;text-align:right" readonly> $</td>

                        </tr>
                    {{/each}}
                    </tbody>


                </table>
            </div>
        </div>
    </div>

</div>

