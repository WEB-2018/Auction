


<div class="container" style="width: 80%">

    <table id="cart" class="table table-hover">
        <thead>
        <tr>
            <th style="width:50%">Tên sản phẩm</th>
            <th style="width:10%">Giá</th>
            <th style="width:8%">Số lượng</th>
            <th style="width:22%" class="text-center">Thành tiền</th>
            <th style="width:10%"> </th>
        </tr>
        </thead>
        <tbody>
        {{#each cart}}<tr>
            <td data-th="Product">
                <div class="row">
                    <div class="col-sm-2 hidden-xs"><img src="/imgs/sp/{{idSanPham}}/1.jpg" alt="Sản phẩm 1" class="img-responsive" width="100">
                    </div>
                    <div class="col-sm-10">
                        <h4 class="nomargin">{{tenSanPham}}</h4>
                    </div>
                </div>
            </td>
            <td data-th="Price">{{giaHienTai}}</td>
            <td data-th="Quantity"><input id="number{{idSanPham}}" type="number" value="{{soLuong}}" disabled="disabled">
            </td>
            <td data-th="Subtotal" class="text-center">{{tong}}</td>
            <td class="actions" data-th="">
                <button id="btnFix{{idSanPham}}" class="btn btn-info btn-sm" onclick="fixProduct({{idSanPham}})"><i class="fa fa-edit"></i>
                </button>
                <button class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>
                </button>
            </td>
        </tr>
        {{/each}}
        </tbody><tfoot>
    <tr>
        <td><a href="/user" class="btn btn-warning"><i class="fa fa-angle-left"></i> Back
        </a>
        </td>
        <td colspan="2" class="hidden-xs"> </td>
        <td class="hidden-xs text-center"><strong>Tổng tiền: {{tongCong}} </strong>
        </td>
        <td><a href="/user/checkout" class="btn btn-success btn-block" >Pay <i class="fa fa-angle-right"></i></a>
        </td>
    </tr>
    </tfoot>
    </table>
</div>