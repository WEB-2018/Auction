
<div class="container">
    <div class="header" style="margin-left:0px">
        <h2>
            Sales Statistics
        </h2>
    </div>
    <div class="row">
        <div class="col-md-4">
            <input type="date" id="date1" value="{{date1}}">
        </div>
        <div class="col-md-4 pull-right">
                <button class="btn btn-primary submit-btn-1 mt-20 btn-hover-1" type="submit" onclick="salesStatis()" id="btnSalesStatis" > Filter</button>

        </div>
    </div>
    <table class="table table-hover" style="overflow-y: scroll">
        <thead>
        <tr>
            <th>Date</th>
            <th>Total Bill</th>
            <th>Total earning</th>
        </tr>
        </thead>
        <tbody height="100px">
        {{#each bill}}
            <tr id="{{NgayLap}}" class="userInfo">
                <td>{{NgayLap}}</td>
                <td>{{soHoaDon}}</td>
                <td>{{tongTien}}</td>
            </tr>
        {{/each}}

        </tbody>
    </table>

        <a href="/user" class="btn btn-warning"><i class="fa fa-angle-left"></i> Back
    </a>

</div>