
  <div class="header" style="margin-left:0px">
    <h2>Users</h2>
  </div>   

  <table class="table table-hover" style="overflow-y: scroll">
    <thead class="text-center">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>Email</th>
        <th>Ban</th>
        <th>Edit</th>
    
      </tr>
    </thead>
    <tbody id="USER">
    {{#each users}}
      <tr id="{{idNguoiDung}}" class="userInfo" >
        <td style=" vertical-align: middle">{{idNguoiDung}}</td>
        <td style=" vertical-align: middle">{{hoTen}}</td>
        <td style=" vertical-align: middle"> {{diaChi}}</td>
        <td style=" vertical-align: middle">{{email}}</td>
        <td style=" vertical-align: middle">

      

         <a type="button" class="btn btn-default " onclick="deleteUser('{{idNguoiDung}}','{{hoTen}}','{{diaChi}}','{{email}}')" title="Ban">
              <span class="fa fa-ban" ></span>
          </a>
          </td>
          <td>
          <a type="button" class="btn btn-default " href="/admin/user/{{idNguoiDung}}/edit" title="Edit">
              <span class="fa fa-edit" ></span>
          </a>

        </td>
        
      </tr>
    {{/each}}
 
    </tbody>
  </table>

  <div class="header" style="margin-left:0px">
  <h2>Banned</h2>
  </div>
         
  <table class="table table-hover" style="overflow-y: scroll">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>Email</th>
        <th>Reset</th>
      </tr>
    </thead>
    <tbody height="100px" id="BAN">
    {{#each block}}
      <tr id="Ban_{{idNguoiDung}}" class="userBan">
        <td>{{idNguoiDung}}</td>
        <td>{{hoTen}}</td>
        <td>{{diaChi}}</td>
        <td>{{email}}</td>
        <td>
         <a type="button" class="btn btn-default " onclick="resetUser('{{idNguoiDung}}','{{hoTen}}','{{diaChi}}','{{email}}')" title="Reset">
              <span class="fa fa-refresh" ></span>
          </a>
          </td>
      </tr>
    {{/each}}
 
    </tbody>
  </table>

